<div class="commodity">

<div class="commodityform">
<form action="" method="post" enctype="multipart/form-data" id="commodityfm">
<h1 class="head" style="text-align: center;">Add Commodity</h1> <br>

    Parent category <select name="catname" id="parentCat" class="form-control">
         <option value="select">Select</option>
        {{#each result}}
        <option value="{{this._id}}">{{this.category}}</option>
        {{/each}}
    </select> <br>

    sub category <select name="subcategory" id="subcat" class="form-control">
        <option value="select">Select</option>
        {{#each subcatresult}}
        <option value="{{this._id}}">{{this.sub_name}}</option>
        {{/each}}
    </select> <br>
    Product <input type="text" id="products" name="product" class="form-control" placeholder="Enter product"> <br>
    Quantity <input type="text" id="qty" name="quantity" class="form-control" placeholder="Enter quantity"><br>
    Price <input type="text" id="prices" name="price"class="form-control"placeholder="Enter price"> <br>
    Description <textarea id="description2" name="descriptions"class="form-control"placeholder="Enter description"></textarea> <br>
    {{!-- Description <input type="text" id="description2" name="descriptions"class="form-control"placeholder="Enter description"> <br> --}}
    Image <input type="file" id="pic" name="picture"class="form-control"> <br>

    <button type="submit" style="margin-left: 150px;">Submit</button>
</form>
</div>
